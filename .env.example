# ==================================
# DATABASE CONFIGURATION
# ==================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Examples:
# - Local: postgresql://postgres:password@localhost:5432/rental_management
# - Neon: postgresql://user:pass@ep-example.us-east-2.aws.neon.tech/rental_db
# - Supabase: postgresql://postgres:pass@db.example.supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:password@localhost:5432/rental_management?schema=public"

# ==================================
# NEXTAUTH CONFIGURATION
# ==================================
# Base URL of your application
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXTAUTH_URL="http://localhost:3000"

# Secret key for NextAuth (generate with: openssl rand -base64 32)
# IMPORTANT: Change this in production!
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# ==================================
# APPLICATION ENVIRONMENT
# ==================================
NODE_ENV="development"

# ==================================
# AWS S3 CONFIGURATION (OPTIONAL)
# ==================================
# Required for cloud file storage
# If not configured, files will be stored locally in /public/uploads
# 
# Setup instructions:
# 1. Create an S3 bucket in AWS Console
# 2. Create an IAM user with S3 permissions
# 3. Generate access keys for the IAM user
# 4. Add the credentials below
# 5. Uncomment S3 code in /app/api/upload/route.ts
# 6. Install: npm install @aws-sdk/client-s3

AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_S3_BUCKET="your-bucket-name"

# CloudFront CDN domain (optional, recommended for production)
# Example: d1234567890abc.cloudfront.net
AWS_CLOUDFRONT_DOMAIN=""

# ==================================
# SMTP EMAIL CONFIGURATION (OPTIONAL)
# ==================================
# Required for sending transactional emails
# If not configured, emails will be logged to console only
#
# Setup instructions:
# 1. Choose an email provider (Gmail, SendGrid, AWS SES, etc.)
# 2. Get SMTP credentials from your provider
# 3. Add the credentials below
# 4. Install: npm install nodemailer
# 5. Install types: npm install -D @types/nodemailer

# SMTP Host (examples below)
# Gmail: smtp.gmail.com
# SendGrid: smtp.sendgrid.net
# AWS SES: email-smtp.us-east-1.amazonaws.com
# Mailgun: smtp.mailgun.org
SMTP_HOST="smtp.gmail.com"

# SMTP Port
# - Port 587: TLS/STARTTLS (recommended)
# - Port 465: SSL
# - Port 25: Unencrypted (not recommended)
SMTP_PORT="587"

# SMTP Authentication
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# From Email Address
SMTP_FROM_EMAIL="noreply@yourdomain.com"
SMTP_FROM_NAME="Rental Management"

# ==================================
# PROVIDER-SPECIFIC EXAMPLES
# ==================================

# --- GMAIL ---
# 1. Enable 2-factor authentication
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use App Password as SMTP_PASSWORD
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-16-char-app-password"

# --- SENDGRID ---
# 1. Sign up at https://sendgrid.com
# 2. Create API Key with Mail Send permissions
# 3. Use 'apikey' as username and API key as password
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_USER="apikey"
# SMTP_PASSWORD="your-sendgrid-api-key"

# --- AWS SES ---
# 1. Verify your domain/email in AWS SES Console
# 2. Create SMTP credentials in SES Console
# 3. Use generated SMTP credentials
# SMTP_HOST="email-smtp.us-east-1.amazonaws.com"
# SMTP_PORT="587"
# SMTP_USER="your-smtp-username"
# SMTP_PASSWORD="your-smtp-password"

# ==================================
# FEATURE FLAGS (OPTIONAL)
# ==================================
# Enable/disable optional features
ENABLE_EMAILS="false"
ENABLE_S3_STORAGE="false"

# Default tenant subdomain to use when none is detected
DEFAULT_TENANT_SUBDOMAIN=demo
